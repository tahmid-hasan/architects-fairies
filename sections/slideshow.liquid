{% assign settings_link = settings.color--alternative %}
<div
  class="slideshow--root{% if section.settings.unique-class != blank %} {{ section.settings.unique-class | handle }}{% endif %}"
  data-section-id="{{ section.id }}"
>
  {%
    render 'carousel',
    section_id: section.id,
    view: 'featured-content',
    text_color: section.settings.text-color,
    blocks_per_slide: section.settings.blocks_per_slide,
    blocks_per_slide_mobile: section.settings.blocks_per_slide_mobile,
    blocks: section.blocks,
    dot_nav_enabled: true,
    total_blocks: section.blocks.size,
    bg_color: section.settings.background-color,
    spacing_above: section.settings.spacing-above,
    spacing_below: section.settings.spacing-below,
    image_height: section.settings.image-height,
    darken_image: section.settings.darken-image,
    box_around_text: section.settings.box-around-text,
    mobile_overlay: section.settings.mobile-overlay,
    auto_rotate: section.settings.auto-rotate,
    rotate_frequency: section.settings.rotate-frequency,
    transition_type: section.settings.transition_type,
    spacing_around_blocks: section.settings.spacing-around-blocks
  %}
</div>
 
{% schema %}
{
  "name": "Slideshow",
  "class": "section--slideshow",
  "settings": [
    {
      "id": "unique-class",
      "type": "text",
      "label": "Unique class"
    },
    {
      "id": "text-color",
      "label": "Text color",
      "type": "select",
      "options": [
        { "label": "Auto", "value": "auto" },
        { "label": "Dark", "value": "dark" },
        { "label": "Light", "value": "light" }
      ],
      "default": "auto"
    },
    {
      "id": "background-color",
      "label": "Background color",
      "type": "select",
      "options": [
        { "label": "None", "value": "none" },
        { "label": "Light", "value": "light" },
        { "label": "Dark", "value": "dark" },
        { "label": "Accent", "value": "accent" }
      ],
      "default": "none"
    },
    {
      "id": "spacing-above",
      "label": "Spacing above",
      "type": "checkbox",
      "default": false
    },
    {
      "id": "spacing-below",
      "label": "Spacing below",
      "type": "checkbox",
      "default": false
    },
    {
      "id": "spacing-around-blocks",
      "label": "Spacing around blocks",
      "type": "checkbox",
      "default": false
    },
    {
      "id": "image-height",
      "label": "Image height",
      "type": "range",
      "min": 0,
      "max": 5,
      "step": 1,
      "default": 3,
      "info": "Select 0 for original image dimensions. The image height may not shrink if the text is filling up too much vertical space"
    },
    {
      "id": "darken-image",
      "label": "Darken images",
      "type": "checkbox",
      "default": true,
      "info": "Can enhance text visibility"
    },
    {
      "id": "blocks_per_slide",
      "label": "Blocks per slide for desktop",
      "type": "range",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 2
    },
    {
      "id": "blocks_per_slide_mobile",
      "label": "Blocks per slide for mobile",
      "type": "radio",
      "options": [
        { "value": "1", "label": "1" },
        { "value": "2", "label": "2" }
      ]
    },
    {
      "id": "box-around-text",
      "label": "Show box around text",
      "type": "checkbox",
      "default": false
    },
    {
      "id": "mobile-overlay",
      "label": "Overlay text on small devices",
      "type": "checkbox",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "auto-rotate",
      "label": "Auto-rotate slides",
      "default": false
    },
    {
      "label": "Rotate frequency (seconds)",
      "id": "rotate-frequency",
      "type": "range",
      "min": 3,
      "max": 15,
      "step": 1,
      "default": 7
    },
    {
      "type": "radio",
      "id": "transition_type",
      "label": "Transition style",
      "options": [
        {
          "value": "slide",
          "label": "Slide"
        },
        {
          "value": "fade",
          "label": "Fade"
        }
      ],
      "default": "slide"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Slide",
      "settings": [
        {
          "id": "image",
          "label": "Image",
          "type": "image_picker"
        },
        {
          "id": "image_mobile",
          "label": "Image for small devices",
          "type": "image_picker"
        },
        {
          "id": "overline",
          "label": "Overline",
          "type": "text",
          "default": "Overline text"
        },
        {
          "id": "title",
          "label": "Heading",
          "type": "text",
          "default": "Slide heading"
        },
        {
          "id": "description",
          "label": "Text",
          "type": "richtext",
          "default": "<p>Combine imagery with text to create stand-out campaign sections, eye-catching promotions, information blocks and more.</p>"
        },
        {
          "id": "text_align",
          "label": "Text align",
          "type": "select",
          "options": [
            { "value": "left", "label": "Left" },
            { "value": "center", "label": "Center" },
            { "value": "right", "label": "Right" }
          ],
          "default": "left"
        },
        {
          "id": "text_transform",
          "label": "Text transform",
          "type": "select",
          "options": [
            { "value": "none", "label": "None" },
            { "value": "capitalize", "label": "Capitalize" },
            { "value": "uppercase", "label": "Uppercase" },
            { "value": "lowercase", "label": "Lowercase" }
          ],
          "default": "none"
        },
        {
          "id": "link-url",
          "label": "Link",
          "type": "url",
          "default": "/"
        },
        {
          "id": "link-text",
          "label": "Link text",
          "type": "text",
          "default": "View more"
        },
        {
          "type": "header",
          "content": "Card Settings"
        },
        {
          "id": "text-position",
          "label": "Card Position",
          "type": "select",
          "options": [
            { "label": "Center", "value": "center" },
            { "label": "Top left", "value": "top-left" },
            { "label": "Top right", "value": "top-right" },
            { "label": "Bottom left", "value": "bottom-left" },
            { "label": "Bottom right", "value": "bottom-right" }
          ],
          "default": "bottom-left"
        },
        {
          "id": "space_horizontal",
          "label": "Destance from left or right",
          "type": "range",
          "unit": "%",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 2,
          "info": "Referance will be change based on 'Text Position' value from the setting above"
        },
        {
          "id": "space_vertical",
          "label": "Destance from top or bottom",
          "type": "range",
          "unit": "%",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 2,
          "info": "Referance will be change based on 'Text Position' value from the setting above"
        },
        {
          "id": "inner_space_vertical",
          "label": "Inner padding top & bottom",
          "type": "range",
          "unit": "px",
          "min": 0,
          "max": 50,
          "step": 1,
          "default": 20
        },
        {
          "id": "inner_space_horizontal",
          "label": "Inner padding right & left",
          "type": "range",
          "unit": "px",
          "min": 0,
          "max": 50,
          "step": 1,
          "default": 20
        },
        {
          "id": "text-width",
          "label": "Text width",
          "type": "select",
          "options": [
            { "value": "small", "label": "Small" },
            { "value": "medium", "label": "Medium" },
            { "value": "large", "label": "Large" }
          ],
          "default": "medium"
        },
        {
          "id": "text_color",
          "label": "Text color",
          "type": "color",
          "default": "#000000"
        },
        {
          "id": "text_background",
          "label": "Text background",
          "type": "color_background",
          "default": "#ffffff"
        },
        {
          "id": "text_background_opacity",
          "label": "Text background opacity",
          "type": "range",
          "min": 0.1,
          "max": 1,
          "step": 0.1,
          "default": 1
        },
        {
          "id": "shadow_around_box",
          "label": "Show shadow around box",
          "type": "checkbox",
          "default": false
        }
      ]
    }
  ],
  "presets": [{
    "name": "Slideshow",
    "blocks": [
      {
        "type": "image"
      },
      {
        "type": "image"
      },
      {
        "type": "image"
      },
      {
        "type": "image"
      }
    ]
  }]
}
{% endschema %}
